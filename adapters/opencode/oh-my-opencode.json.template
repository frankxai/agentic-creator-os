{
  "$schema": "https://raw.githubusercontent.com/oh-my-opencode/schema/main/config.schema.json",
  "_comment": "Generated by Agentic Creator OS - {{TIMESTAMP}}",

  "identity": {
    "override": true,
    "name": "{{CREATOR_NAME}}",
    "tagline": "{{TAGLINE}}",
    "personality": "{{PERSONALITY_SUMMARY}}"
  },

  "voice": {
    "tone": {{TONE_ARRAY}},
    "use": {{WORDS_TO_USE_ARRAY}},
    "avoid": {{WORDS_TO_AVOID_ARRAY}},
    "principles": {{CONTENT_PRINCIPLES_ARRAY}}
  },

  "audience": {
    "primary": "{{PRIMARY_AUDIENCE}}",
    "pain_points": {{PAIN_POINTS_ARRAY}},
    "transformation": "{{TRANSFORMATION_PROMISE}}"
  },

  "subagents": {
    {{#each AGENTS}}
    "{{this.slug}}": {
      "enhance": true,
      "name": "{{this.name}}",
      "role": "{{this.role}}",
      "context": "{{this.context_summary}}",
      "activation": "{{this.activation_phrase}}"
    }{{#unless @last}},{{/unless}}
    {{/each}}
  },

  "magic_words": {
    {{#each MAGIC_WORDS}}
    "{{this.trigger}}": "{{this.description}}"{{#unless @last}},{{/unless}}
    {{/each}}
  },

  "skills": {
    "library_path": "{{SKILLS_PATH}}",
    "categories": {{SKILLS_CATEGORIES_ARRAY}}
  },

  "workflows": {
    {{#each WORKFLOWS}}
    "{{this.slug}}": {
      "name": "{{this.name}}",
      "trigger": "{{this.trigger}}",
      "agents": {{this.agents_array}}
    }{{#unless @last}},{{/unless}}
    {{/each}}
  }
}
