  "anti_drift_config": {
    "default": {
      "topology": "hierarchical",
      "maxAgents": 8,
      "strategy": "specialized",
      "consensus": "raft"
    },
    "checkpoints": [
      "after_research",
      "after_first_draft",
      "every_500_words",
      "before_publish"
    ],
    "context_limits": {
      "per_agent": 0.3,
      "shared_memory": 0.2,
      "total_session": 0.7,
      "fresh_context_trigger": 0.7
    }
  },

  "skill_progressive_disclosure": {
    "content": {
      "seo-optimization": ["keyword-research", "on-page-seo", "schema-markup", "internal-linking"],
      "voice-matching": ["tone-analysis", "vocabulary-patterns", "sentence-rhythm", "signature-phrases"],
      "hook-writing": ["question-hooks", "statement-hooks", "story-hooks", "curiosity-gaps"],
      "cta-design": ["urgency-ctas", "value-ctas", "social-proof-ctas", "scarcity-ctas"]
