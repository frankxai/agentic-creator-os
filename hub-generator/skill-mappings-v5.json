{
  "_description": "ACOS v5 - Maps creator workflows to skills, agents, and swarm configurations",
  "_version": "5.0.0",
  "_updated": "2026-01-22",
  "_sources": [
    "claude-flow (swarm orchestration)",
    "wshobson/agents (plugin architecture)",
    "VoltAgent/awesome-claude-code-subagents (100+ agents)"
  ],

  "model_routing": {
    "tiers": {
      "agent_booster": {
        "latency": "<1ms",
        "cost": 0,
        "use_for": ["var-to-const", "add-types", "add-error-handling", "async-await", "add-logging", "remove-console"]
      },
      "haiku": {
        "latency": "~500ms",
        "cost": 0.0002,
        "use_for": ["simple_drafts", "social_posts", "formatting", "quick_edits", "research_summaries"]
      },
      "sonnet": {
        "latency": "2-3s",
        "cost": 0.003,
        "use_for": ["blog_posts", "product_copy", "code_review", "content_creation", "analysis"]
      },
      "opus": {
        "latency": "3-5s",
        "cost": 0.015,
        "use_for": ["voice_calibration", "strategy", "complex_reasoning", "architecture", "nuanced_decisions"]
      }
    },
    "task_to_model": {
      "social_post": "haiku",
      "blog_draft": "sonnet",
      "blog_edit": "haiku",
      "newsletter": "sonnet",
      "landing_page": "sonnet",
      "product_strategy": "opus",
      "voice_check": "opus",
      "seo_optimization": "haiku",
      "code_transform": "agent_booster",
      "code_review": "sonnet",
      "music_prompt": "sonnet",
      "research": "haiku"
    }
  },

  "swarm_configurations": {
    "content_creation": {
      "topology": "hierarchical",
      "maxAgents": 6,
      "strategy": "specialized",
      "agents": ["swarm-coordinator", "topic-researcher", "blog-writer", "editor", "seo-intelligence-scout", "voice-calibrator"]
    },
    "music_production": {
      "topology": "hierarchical",
      "maxAgents": 5,
      "strategy": "specialized",
      "agents": ["swarm-coordinator", "suno-prompt-architect", "lyrics-writer", "frequency-alchemist", "music-reviewer"]
    },
    "product_launch": {
      "topology": "hierarchical",
      "maxAgents": 8,
      "strategy": "specialized",
      "agents": ["swarm-coordinator", "copywriter", "landing-page-builder", "email-sequence-builder", "pricing-strategist", "seo-intelligence-scout", "voice-calibrator", "launch-coordinator"]
    },
    "research": {
      "topology": "mesh",
      "maxAgents": 4,
      "strategy": "balanced",
      "agents": ["topic-researcher", "competitor-analyst", "trend-forecaster", "synthesizer"]
    },
    "quick_content": {
      "topology": "mesh",
      "maxAgents": 2,
      "strategy": "balanced",
      "agents": ["blog-writer", "editor"]
    }
  },

  "workflow_mappings": {
    "blog_posts": {
      "description": "Write blog posts / articles",
      "swarm": "content_creation",
      "model_tier": "sonnet",
      "primary_skills": ["content-strategy", "seo-optimization", "voice-matching"],
      "secondary_skills": ["hook-writing", "cta-design"],
      "agents": ["blog-writer", "editor", "seo-intelligence-scout"],
      "templates": ["blog-post.md", "article-outline.md"]
    },

    "social_media": {
      "description": "Create social media content",
      "swarm": "quick_content",
      "model_tier": "haiku",
      "primary_skills": ["social-distribution", "content-repurposing"],
      "secondary_skills": ["hook-writing", "hashtag-strategy"],
      "agents": ["social-content-creator", "editor"],
      "templates": ["twitter-thread.md", "linkedin-post.md"]
    },

    "music_production": {
      "description": "Produce music / audio",
      "swarm": "music_production",
      "model_tier": "sonnet",
      "primary_skills": ["suno-prompting", "frequency-mapping", "song-structure"],
      "secondary_skills": ["genre-blending", "lyrics-writing"],
      "agents": ["suno-prompt-architect", "frequency-alchemist", "lyrics-writer"],
      "templates": ["song-prompt.md", "album-concept.md"]
    },

    "products_courses": {
      "description": "Build products / courses",
      "swarm": "product_launch",
      "model_tier": "sonnet",
      "primary_skills": ["course-architecture", "landing-page-design", "pricing-strategy"],
      "secondary_skills": ["launch-sequencing", "email-nurture"],
      "agents": ["course-architect", "landing-page-builder", "pricing-strategist"],
      "templates": ["product-spec.md", "course-outline.md", "launch-plan.md"]
    },

    "research": {
      "description": "Research topics",
      "swarm": "research",
      "model_tier": "haiku",
      "primary_skills": ["research-methodology", "source-validation", "synthesis"],
      "secondary_skills": ["competitor-analysis", "trend-tracking"],
      "agents": ["topic-researcher", "competitor-analyst", "synthesizer"],
      "templates": ["research-brief.md", "source-tracker.md"]
    },

    "newsletter": {
      "description": "Manage a newsletter",
      "swarm": "content_creation",
      "model_tier": "sonnet",
      "primary_skills": ["email-copywriting", "audience-segmentation", "sequence-design"],
      "secondary_skills": ["subject-line-testing", "cta-optimization"],
      "agents": ["newsletter-composer", "editor", "email-sequence-builder"],
      "templates": ["newsletter-issue.md", "welcome-sequence.md"]
    },

    "video_podcast": {
      "description": "Record videos / podcasts",
      "swarm": "content_creation",
      "model_tier": "sonnet",
      "primary_skills": ["script-writing", "content-repurposing", "show-notes"],
      "secondary_skills": ["hook-writing", "timestamp-chapters"],
      "agents": ["script-writer", "content-repurposer", "editor"],
      "templates": ["video-script.md", "podcast-outline.md"]
    },

    "coding": {
      "description": "Code projects",
      "swarm": null,
      "model_tier": "sonnet",
      "primary_skills": ["test-driven-development", "code-review"],
      "secondary_skills": ["debugging", "performance-optimization"],
      "agents": ["code-reviewer", "debugger", "deployer"],
      "templates": ["project-spec.md", "pr-template.md"]
    }
  },

